extends ../base 
block content 
    if errorMessage
        h4=errorMessage
    form(method="post")
        input(name="username",placeholder="username",required,type="text") 
        input(name="password",placeholder="password",required,type="password") 
        input(value="Login!",type="submit") 
    h4 if you still not have account
    a(href="/join") go to Join
    br
    h4 if you want to login with Github 
    a(href="/users/github/start") Login with Github